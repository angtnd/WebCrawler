<script type="text/javascript" src="js/velocity.ui.min.js"></script>

<script type="text/javascript">

window.onload = function() {

var fond = document.getElementById("fond");
var logo_blanc = document.getElementById("logo_blanc");
var logo = document.getElementById("logo");
var txt_claim1 = document.getElementById("txt_claim1");
var txt_claim2 = document.getElementById("txt_claim2");
var txt_claim3 = document.getElementById("txt_claim3");
var prix = document.getElementById("prix");
var txt_forfait = document.getElementById("txt_forfait");
var bt = document.getElementById("bt");

Velocity.defaults.queue = false;
// easings : swing | easeInOut Sine Quad Cubic Quart Quint Expo Circ | spring | [500, 20] | [0.5,-0.5,0.4,1]
// easings UI : callout.bounce | callout.shake | callout.tada | transition.flipXIn | transition.slideRightIn | transition.bounceLeftOut | ...

// 1
Velocity ( fond, { scale:1.8, top:-100, opacity:1 }, { duration:0, delay:0, easing:"easeOutCubic" } );
Velocity ( logo_blanc, "transition.bounceIn", { duration:500, delay:500, easing:"easeOutCubic" } );

var duree1 = 3000;

// 2
Velocity ( logo_blanc, { scale:0, opacity:0 }, { duration:500, delay:duree1, easing:"easeOutCubic" } );
Velocity ( fond, { scale:1, top:0 }, { duration:1000, delay:200+duree1, easing:"easeOutCubic" } );
Velocity ( logo, { opacity:1 }, { duration:500, delay:600+duree1, easing:"easeOutCubic" } );
Velocity ( txt_forfait, { opacity:1 }, { duration:500, delay:900+duree1, easing:"easeOutCubic" } );
Velocity ( prix, "transition.bounceIn", { duration:500, delay:1200+duree1, easing:"easeOutCubic" } );
Velocity ( ml, { opacity:1 }, { duration:500, delay:800+duree1, easing:"easeOutCubic" } );

var duree2 = 8000;

// 3
Velocity ( txt_forfait, { opacity:0 }, { duration:500, delay:duree2, easing:"easeOutCubic" } );
Velocity ( prix, { opacity:0 }, { duration:500, delay:duree2, easing:"easeOutCubic" } );
Velocity ( ml, { opacity:0 }, { duration:500, delay:duree2, easing:"easeOutCubic" } );
Velocity ( txt_claim1, "transition.flipXIn", { duration:800, delay:400+duree2, easing:"easeOutCubic" } );
Velocity ( txt_claim2, "transition.bounceIn", { duration:800, delay:1000+duree2, easing:"easeOutCubic" } );
Velocity ( txt_claim3, "transition.flipXIn", { duration:800, delay:1200+duree2, easing:"easeOutCubic" } );

var duree3 = 13000;

// 4
Velocity ( txt_claim1, "transition.flipBounceXOut", { duration:600, delay:2600, easing:"easeInCubic" } );
Velocity ( txt_claim2, "transition.flipBounceXOut", { duration:600, delay:2200, easing:"easeInCubic" } );
Velocity ( txt_claim3, "transition.flipBounceXOut", { duration:600, delay:2200, easing:"easeInCubic" } );
Velocity ( ml, { opacity:1 }, { duration:500, delay:duree3, easing:"easeOutCubic" } );
Velocity ( txt_forfait, { opacity:1 }, { duration:500, delay:100+duree3, easing:"easeOutCubic" } );
Velocity ( txt_forfait, { scale:0.7, top:"-=25px", right:"-=20px" }, { duration:400, delay:duree3+1200 } );
Velocity ( prix, { opacity:1 }, { duration:500, delay:duree3+700, easing:"easeOutCubic" } );
Velocity ( prix, { top:"-=40px" }, { duration:500, delay:duree3+1300, easing:"easeOutCubic" } );
Velocity ( bt, "transition.bounceIn", { duration:500, delay:1800+duree3, easing:"easeOutCubic" } );
Velocity ( bt, "callout.shake", { duration:1000, delay:1000, easing:"easeOutCubic" } );

}
</script>
