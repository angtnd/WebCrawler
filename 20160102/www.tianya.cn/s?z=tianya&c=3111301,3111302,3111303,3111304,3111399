(function ($) {
	
    // ´«Ñú²ÎÊý
	var data = {
		link: "http://dol.tianya.cn/c?z=tianya&la=0&si=382&cg=617&c=3111302&ci=217&or=1029&l=14051&bg=14051&b=14156&u=http%3A%2F%2Fnong.tianya.cn%2Fitem%2F11538",// Á´½Ó
		resource: "http://801.tianya.cn/dolphin/tianya/2015/12/0_968.jpg",// ×ÊÔ´
        width: "100",// ¶ÔÁª¿í¶È
        height: "300",// ¶ÔÁª¸ß¶È
        scroll: "0",// 0²»¹ö¶¯(Ä¬ÈÏ)¡¢1¹ö¶¯
        logo: "1"// 1ÏÔÊ¾(Ä¬ÈÏ)¡¢0²»ÏÔÊ¾
    };
    // html template
    var template = {
    	// ×ÊÔ´ÈÝÆ÷Ä£°å
        wrapper: [
        	'<div id="couplet_right" style="position:#pos#;top:100px;right:5px;z-index:1;text-align:center;">',
        		'<div class="couplet-wrapper" style="position:relative;*zoom:1;">#content#</div>',
        		'<img id="couplet_right_colse" src="#btnsrc#" style="cursor:pointer;" />',
			'</div>'
        ].join(""),
        // ´øÁ´½ÓÍ¼Æ¬Ä£°å
        img: ['<a href="#link#" target="_blank"><img src="#src#" style="width:#width#px;height:#height#px;vertical-align:middle;" /></a>'].join(""),
        // ÎÞÁ´½ÓÍ¼Æ¬Ä£°å
        noLinkImg: ['<img src="#src#" style="width:#width#px;height:#height#px;vertical-align:middle;" />'].join(""),
        // ´øÁ¬½ÓflashÄ£°å
        flash: [
        	'<div style="position:relative;width:#width#px;height:#height#px;background-color:#f5f9fa;">',
        		'<embed style="position:absolute;z-index:0;left:0;" src="#src#" width="#width#" height="#height#" wmode="opaque" type="application/x-shockwave-flash" pluginspage="http://www.macromedia.com/go/getflashplayer" quality="High">',
        		'<a href="#link#" target="_blank" style="cursor:pointer;"><div style="position:relative;filter:alpha(opacity=0);left:0;top:0;width:#width#px;height:#height#px;z-index:10;opacity:0;background-color:#000000;"></div></a>',
        	'</div>'
        ].join(""),
        // ÎÞÁ´½ÓflashÄ£°å
        noLinkFlash: ['<embed src="#src#" width="#width#" height="#height#" wmode="transparent" type="application/x-shockwave-flash" pluginspage="http://www.macromedia.com/go/getflashplayer" quality="High">'].join(""),
        // logoÄ£°å
        logo: ['<img src="http://801.tianya.cn/2015/leftbottom.png" style="width:29px;height:16px;position:absolute;left:0;bottom:0;">'].join("")
    };
    /**
     * @description ½áºÏÌæ»»Êý¾ÝºÍhtmlÄ£°å£¬´´½¨ÐÂµÄhtmlÎÄ±¾´®
     * @param {String} template Ä£°å
     * @param {Object} data Ìæ»»htmlÄ£°åÖÐÕ¼Î»·ûµÄÊý¾Ý
     * @return {String} ¸ù¾ÝÊý¾ÝºÍhtmlÄ£°åÉú³ÉµÄhtmlÎÄ±¾´®
     * @example
     */
    function createHtml (template, data) {
    	
    	if (template && data) {
            template = template.replace(/#([\d\w]+)#/g, function (match, submatch, pos, oText) {
                return (data[submatch] !== "undefined") ? data[submatch] : submatch;
            });
        }
        
        return template;
    };
    /**
     * @description ´´½¨¶ÔÁªDOM
     * @param {Object} options
     * @return
     */
    function renderCouplet (options) {
    	var content = "",
    		html = "";
    	
    	if (/\.jpg$|\.png$|\.gif$/i.test(options.resource)) {
    		if (options.link != "") {
                content = createHtml(template.img, {"link": options.link, "src": options.resource, "width": options.width, "height": options.height});
            } else {
                content = createHtml(template.noLinkImg, {"src": options.resource, "width": options.width, "height": options.height});
            }
        } else if (/\.swf$/i.test(options.resource)) {
        	if (options.link != "") {
                content = createHtml(template.flash, {"link": options.link, "src": options.resource, "width": options.width, "height": options.height});
            } else {
                content = createHtml(template.noLinkFlash, {"src": options.resource, "width": options.width, "height": options.height});
            }
        }
        
        if (options.logo == 1) {
        	content += template.logo;
        }
        
        html = createHtml(template.wrapper, {
			"btnsrc": "http://static.tianyaui.com/img/static/2008/tygg/c" + options.width + ".jpg",
			"pos": options.pos,
			"content": content
        });
        
        $("body").append(html);
    }
    /**
     * @description IE6¹ö¶¯¸úËæ
     */
    function ie6Scroll () {
    	var interval = null;
        function render () {
            var top = $(document).scrollTop() + 100;
            $("#couplet_right").css({"top": top});
        }
        function startScroll () {
            interval = setInterval(render, 400);
        }
        
        function stopScroll () {
            clearInterval(interval);
        }
        startScroll();
    }
    /**
     * @description Ö÷´¦Àíº¯Êý
     */
    function init () {
    	var isIE6 = $.browser.msie && $.browser.version === "6.0" ? true : false;
    	
    	data.pos = data.scroll == 1 && !isIE6 ? "fixed" : "absolute";
    	
        renderCouplet(data);
        $("#couplet_right_colse").bind("click", function () {
            $("#couplet_right").css({"visibility": "hidden"});
        });
        
        if (data.scroll == 1 && isIE6) {
        	ie6Scroll();
        }
    }
    
    // Ö´ÐÐ
    init();
    
})(jQuery);
 (function ($) {
	var data = {
		resource: "http://801.tianya.cn/dolphin/tianya/2015/12/0_1091.jpg",// ×ÊÔ´£¬ÐèÊµÊ©ÌîÐ´£¬²»¿ÉÎª¿Õ
		link: "http://dol.tianya.cn/c?z=tianya&la=0&si=382&cg=617&c=3111304&ci=753&or=1082&l=15286&bg=15286&b=15362&u=http%3A%2F%2Fbbs.tianya.cn%2Fpost-45-1714836-1.shtml",// Á´½Ó£¬ÐèÊµÊ©ÌîÐ´£¬²»¿ÉÎª¿Õ
		paddingTop: "60",// ¶¥²¿Á´½Ó¸ß¶È£¬¿ÉÑ¡Ïî£¬ÈôÊµÊ©²»ÌîÐ´ÔòÎª¿Õ
		contentWidth: "1000",// ÄÚÈÝ¿í¶È£¬¿ÉÑ¡Ïî£¬ÈôÊµÊ©²»ÌîÐ´ÔòÎª¿Õ
		zIndex: "99"// ±³¾°Á´½Ó²ã¼¶£¬¿ÉÑ¡Ïî£¬ÈôÊµÊ©²»ÌîÐ´ÔòÎª¿Õ
	};
	
	var template = {
        bgAdLink: '<a class="bgAdLink" target="_blank" href="#link#" style="display:block; position:absolute; z-index:#zIndex#; top:0; left:0;"></a>',
        bgAdCloseBtn: '<a class="bgAdCloseBtn" href="javascript:void(0);" style="position:absolute; right:10px; top:10px; font-size:20px; color:#f60; z-index:#zIndex#; text-decoration:none;" title="¹Ø±Õ">&times;</a>'
	};
	
	/**
     * @description ½áºÏÌæ»»Êý¾ÝºÍhtmlÄ£°å£¬´´½¨ÐÂµÄhtmlÎÄ±¾´®
     * @param {String} template Ä£°å
     * @param {Object} data Ìæ»»htmlÄ£°åÖÐÕ¼Î»·ûµÄÊý¾Ý
     * @return {String} ¸ù¾ÝÊý¾ÝºÍhtmlÄ£°åÉú³ÉµÄhtmlÎÄ±¾´®
     * @example
     */
    function createHtml (template, data) {
    	if (template && data) {
            template = template.replace(/#([\d\w]+)#/g, function (match, submatch, pos, oText) {
                return (data[submatch] !== "undefined") ? data[submatch] : submatch;
            });
        }
        return template;
    };
	
    /**
     * @description Ö÷´¦Àíº¯Êý
     */
    function proc (args) {
    	var resource = args.resource,// ×ÊÔ´
    		link = args.link,// Á´½Ó
    		paddingTop = args.paddingTop || 60,// ¶¥²¿Á´½Ó¸ß¶È
    		contentWidth = args.contentWidth || 1000,// ÄÚÈÝ¿í¶È
    		zIndex = args.zIndex || 100,// ±³¾°Á´½Ó²ã¼¶
    		
    		$body = $("body"),// bodyÔªËØjQuery¶ÔÏó
    		$base,// »ù±¾½Úµã£¬ÓÃÓÚ¿ËÂ¡
    		$tmp,// ÁÙÊ±½Úµã
    		bodyWidth = $body.width(),// Ò³Ãæ¿í¶È
    		sideWidth,// ²à±ß¿í¶È
    		pic;// Í¼Æ¬¶ÔÏó
    	
    	pic = new Image();
    	pic.onload = function () {
    		sideWidth = (Math.min(bodyWidth, pic.width) - contentWidth) / 2;
    		init();
    	};
    	pic.src = resource;
    	
    	function init () {
    		// ÐÞ¸Äbody±³¾°Í¼Æ¬
			$body.css("background", "url('" + resource + "') no-repeat scroll center top transparent");
			// ÐÞ¸ÄbodyµÄÄÚ±ß¾à
			$body.animate({
				"paddingTop": paddingTop
			}, 300);
			
			$base = $(createHtml(template.bgAdLink, {"link": link, "zIndex": zIndex}));
			
			// ¶¥²¿Á´½Ó
			$tmp = $base.clone();
			$tmp.height(paddingTop);
			$tmp.width(contentWidth);
			$tmp.css("left", "50%");
			$tmp.css("margin-left", (-1) * (contentWidth / 2) + "px");
			$body.append($tmp);
			
			if (sideWidth > 0) {
				// ×ó±ßÁ´½Ó
				$tmp = $base.clone();
				$tmp.height(pic.height);
				$tmp.width(sideWidth);
				$tmp.css("left", "50%");
				$tmp.css("margin-left", (-1) * ((contentWidth / 2) + sideWidth) + "px");
				$body.append($tmp);
				
				// ÓÒ±ßÁ´½Ó
				$tmp = $base.clone();
				$tmp.height(pic.height);
				$tmp.width(sideWidth);
				$tmp.css("left", "50%");
				$tmp.css("margin-left", (contentWidth / 2) + "px");
				$body.append($tmp);
			}
			
			// ¹Ø±Õ¹ã¸æ°´Å¥
			$body.append(createHtml(template.bgAdCloseBtn, {"zIndex": zIndex + 5}));
			$(".bgAdCloseBtn").bind("click", function () {
				$body.animate({
					"paddingTop": 0
				}, 300);
				$body.css("background", "none");
				$(".bgAdLink").remove();
				$(this).remove();
			});
    	}
    }
    
	proc(data);
	
})(jQuery);
 