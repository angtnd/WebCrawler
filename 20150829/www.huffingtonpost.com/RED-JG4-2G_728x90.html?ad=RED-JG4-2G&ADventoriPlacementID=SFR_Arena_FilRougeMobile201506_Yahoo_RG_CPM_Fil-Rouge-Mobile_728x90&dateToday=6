<script>
/* ADVENTORI - Initialisation de lavariable dynamique */
var demo = ADventori.initData({'dateToday':'VALABLE JUSQU\'AU 3 SEPTEMBRE 2015'});
/* ADVENTORI - Initialisation de lavariable dynamique - Fin */

var canvas, stage, exportRoot;
var ML;
var FF = 0;
if(navigator.userAgent.toLowerCase().indexOf('firefox') > -1) FF = 1;

function init() {
	canvas = document.getElementById("canvas");
	images = images||{};
	ss = ss||{};
	
	ML = document.getElementById("ML");

	var loader = new createjs.LoadQueue(false);
	loader.addEventListener("fileload", handleFileLoad);
	loader.addEventListener("complete", handleComplete);
loader.loadFile({src:"assets/728x90_atlas_.json", type:"spritesheet", id:"728x90_atlas_"}, true);
	loader.loadManifest(lib.properties.manifest);
}

function handleFileLoad(evt) {
	if (evt.item.type == "image") { images[evt.item.id] = evt.result; }
}

function hideML(){
	ML.style.display = 'none';
}

function showML(){
	ML.style.display = 'block';
}

/* ADVENTORI - Fonction getDate liÃ©e au paramÃ¨tre ADventori */

function getDate(){
		
		var J = demo['dateToday'],
		D,
		W;
		if(J < 2){
			D = "JOUR";
		}else{
			D = "JOURS";
		}
		if(J > 0) {
		  W = "PLUS QUE " + J + " " + D + ' POUR EN PROFITER';
		} else {
		  W = 'JUSQU\'AU 3 SEPTEMBRE 2015';
		}
		return W ;
}
/* ADVENTORI - Fonction getDate liÃ©e au paramÃ¨tre ADventori - Fin*/


function handleComplete(evt) {
	var queue = evt.target;
	ss["728x90_atlas_"] = queue.getResult("728x90_atlas_");
	exportRoot = new lib._728x90();

	stage = new createjs.Stage(canvas);
	stage.addChild(exportRoot);
	stage.update();
	stage.enableMouseOver();

	createjs.Ticker.setFPS(lib.properties.fps);
	createjs.Ticker.addEventListener("tick", stage);
}
</script>
