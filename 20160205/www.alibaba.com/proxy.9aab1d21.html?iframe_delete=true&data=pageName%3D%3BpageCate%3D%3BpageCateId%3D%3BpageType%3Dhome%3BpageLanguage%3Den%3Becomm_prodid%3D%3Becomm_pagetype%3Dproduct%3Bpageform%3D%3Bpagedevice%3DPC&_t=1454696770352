<script type="text/javascript">

    var URL_GOOGLE = "//googleads.g.doubleclick.net/pagead/viewthroughconversion/1033530103/?value=0&label=ksXOCPHc5AQQ99Xp7AM&guid=ON&script=0",
            URL_FACEBOOK = "//www.facebook.com/tr/?id=1570523743267998&ev=ViewContent&if=false&v=2.0",
            URL_DBM = "//ad.doubleclick.net/ddm/activity/src=5271221;type=invmedia;cat=sycf4osd;",
            JSONDATA = getDataFromQuery("data");

    var GOOGLE_DATA = getGoogleData(JSONDATA);

    var FB_DATA = getFbData(JSONDATA);

    var DBM_DATA = getDbmDate(JSONDATA);

    // Google Remarketing
    sendByImg(URL_GOOGLE + "&data=" + GOOGLE_DATA);
    //Facebook Remarketing
    sendByImg(URL_FACEBOOK + "&" + FB_DATA);
    //DBM
    sendByImg(URL_DBM + DBM_DATA);
    //criteo
    sendCriteoData(JSONDATA);

    //google data format
    function getGoogleData(data) {
        var key, res = [];
        if (!data) {
            return false;
        }

        var cateList = data.pageCate.split("|");

        var length = cateList.length;

        //dynamic Remarketing
        data["dynx_itemid"] = cateList[length - 1] || "";
        data["dynx_itemid2"] = cateList[0] || "";
        data["dynx_pagetype"] = data.pageform || data.pageType;
        data["dynx_totalvalue"] = 0;

        for (key in data) {
            val = data[key] || "";
            res.push(key + "=" + val.replace(/\|/g, ","));
        }

        return encodeURIComponent(res.join(";"));
    }

    //fb data format
    function getFbData(data) {
        if (!data) {
            return false;
        }
        var fbData = {
            "cd[content_ids]": [],
            "cd[content_type]": "product",
            "cd[pageCate]": "",
            "cd[pageName]": "",
            "cd[pageLanguage]": "en",
            "cd[ecomm_prodid]": "",
            "cd[ecomm_pagetype]": ""
        };

        var originalDataArr = data.pageCate.split("|");

        var strPageCate = [];

        for (var i = 0, l = originalDataArr.length; i < l; i++) {
            strPageCate.push('"'+ originalDataArr[i] + '"');
        }

        fbData["cd[content_ids]"] = encodeURIComponent("[" + strPageCate.toString() + "]");

        for (var key in data) {
            fbData["cd[" + key + "]"] = encodeURIComponent(data[key]);
        }

        return toQueryString(fbData);

    }

    //DBM Floodlight Tag
    function getDbmDate(data) {
        var n = 4;
        if (!data) {
            return false;
        }

        var dbmData = {
            "u1": "",
            "u2": "",
            "u3": "",
            "u4": "",
            "u5": "",
            "u6": "",
            "u7": "",
            "u8": "",
            "u9": "",
            "u10": ""
        };


        for(var j = 1; j <= n; j++){
            if(data["CP" + j]){
                dbmData["u" + (10 +j)] = encodeURIComponent(data["CP" + j]);
            }
        }

        var cateList = data.pageCate.split("|");

        var length = cateList.length;

        dbmData.u1 = encodeURIComponent(cateList[length - 1]);

        for (var i = 0; i < length; i++) {
            dbmData["u" + (i + 2)] = encodeURIComponent(cateList[i]);
        }

        dbmData.u6 = encodeURIComponent(data.pageName) || "";
        dbmData.u7 = data.pageform || data.pageType;
        dbmData.u8 = data.pagedevice || "";
        dbmData.u9 = data.pageLanguage || "";
        dbmData.u10 = data.productId || "";
        dbmData.ord = (new Date()).getTime();

        return toQueryStringDbm(dbmData);
    }

    /**
     * åéCriteoæ°æ®
     * @param data
     * @returns {boolean}
     */
    function sendCriteoData(data) {

        if (!data) {
            return false;
        }
        var viewPage = "";
        var attrProductsId = [];

        var pageTypeScene = (data.pageType && data.pageType != "") ? data.pageType : data.pageform;

        if(!pageTypeScene || pageTypeScene == "" ){
            return false;
        }

        if(!data.account || data.account == ""){
            return false;
        }

        //TODO: åç»­ç»åå¤æ­
        if(pageTypeScene == "home") {
            viewPage = "viewHome";
        } else if (pageTypeScene == "detail") {
            viewPage = "viewItem";
        }else{
            viewPage = "viewList"
        }

        if(viewPage || viewPage != ""){

            if(data.productIds || data.ecomm_prodid){
                attrProductsId = data.productIds.split(",") || data.ecomm_prodid;
            }

            if(data.categoryIds){
                attrProductsId.push(data.categoryIds);
            }

            window.criteo_q = window.criteo_q || [];
            window.criteo_q.push(
                    {event: "setAccount", account: data.account},
                    {event: "setSiteType", type: data.pagedevice},
                    {event: viewPage, item: attrProductsId}
            );
        }
    }

    function toQueryString(params) {
        var res = [], key, val;

        if (!params) {
            return "";
        }

        for (key in params) {
            val = params[key] || "";
            res.push(key + "=" + val);
        }

        return res.join("&");
    }

    function toQueryStringDbm(params) {
        var res = [], key, val;

        if (!params) {
            return "";
        }

        for (key in params) {
            val = params[key] || "";
            res.push(key + "=" + val);
        }

        return res.join(";");
    }


    function getDataFromQuery(key) {
        var arrf, arrs,
                query = location.search,
                data = query.match(/[&?]data=([^&]+)/i),
                objData = {};

        if (data === null) {
            return "";
        }

        arrf = decodeURIComponent(data[1]).split(";");

        for (var i = arrf.length - 1; i >= 0; i--) {
            arrs = arrf[i].split("=");
            objData[arrs[0]] = arrs[1]
        }

        return objData;
    }

    function sendByImg(url) {

        var t = (new Date()).getTime(),
                n = "remarketing_" + t,
                img = window[n] = new Image();

        img.onload = img.onerror = function () {
            window[n] = null;
            this.onload = this.onerror = null;
        };

        img.src = url + "&_t=" + t;
    }
</script>
</body>
</html>
