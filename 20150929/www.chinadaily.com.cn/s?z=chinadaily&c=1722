var intervalId_clm = null;
function slideAd_clm(id,nStayTime,sState,nMaxHth,nMinHth){ 
  this.stayTime=nStayTime*1000 || 3000; 
  this.maxHeigth_clm=nMaxHth || 400; 
  this.minHeigth_clm=nMinHth || 105; 
  this.state=sState || "down" ; 
  var obj = document.getElementById(id); 
  if(intervalId_clm != null)window.clearInterval(intervalId_clm); 
  function openBox(){ 
	var h = obj.offsetHeight; 
	document.getElementById("fullscr1658").style.display="block";
	obj.style.height = ((this.state == "down") ? (h + 5) : (h - 5))+"px"; 
    if(obj.offsetHeight>this.maxHeigth_clm){ 
		window.clearInterval(intervalId_clm); 
		intervalId_clm=window.setInterval(closeBox,this.stayTime); 
    } 
    if (obj.offsetHeight<this.minHeigth_clm){ 
		window.clearInterval(intervalId_clm); 
		document.getElementById("fullscr1658").style.display="none";
    } 
  } 
  
  function closeBox(){ 
	slideAd_clm(id,this.stayTime,"up",nMaxHth,nMinHth); 
  } 
  intervalId_clm = window.setInterval(openBox,10); 
} 
var fullscr_img = document.getElementById("cls_btn1658");
var cloumn_img = document.getElementById("rply_btn1658");
	function add_agent(oTarget,sEventType,fnHandler)    
	{   
	if(oTarget.addEventListener){oTarget.addEventListener(sEventType,fnHandler,false);}
	else if(oTarget.attachEvent){oTarget.attachEvent("on"+sEventType,fnHandler);}
	else{oTarget["on"+sEventType] = fnHandler;}    
	}
	add_agent(fullscr_img,"click",function(){var intervalId_clm = null;slideAd_clm("MyMoveAd1658",0,"up");});
	add_agent(cloumn_img,"click",function(){var intervalId_clm = null;slideAd_clm("MyMoveAd1658",showtime,"down");});
slideAd_clm("MyMoveAd1658",showtime);
